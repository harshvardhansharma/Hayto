{
  "name": "Hayto",
  "short_name": "Hayto",
  "description": "Hayto is a plugin which solves the issue of redundant downloads and tabs.",
  "manifest_version": 2,
  "version": "1.1.1",
  "icons": { 
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "storage",
    "downloads",
    "downloads.open",
    "downloads.shelf",
    "notifications",
    "tabs"
  ]
}